#
# Bourne Again SHell-specific initialisation
#

alias hc="history -c; clear";	# Aliases
PS1='\u@\h:(\w)> \$ ';		# Prompt string;
set -o nobraceexpand;		# The shell does not performs brace expansion (sh(1) compatibility)
set -o nohistexpand;		# Disable ! style history substitution (sh(1) compatibility)

