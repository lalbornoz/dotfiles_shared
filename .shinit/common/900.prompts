#
# One of:
# * <user>@<hname>:(<pwd>)> <$|#> 
# * <user>@\<UNKNOWN\>:(<pwd>)> <$|#> 
# * <hname>:(<pwd>)> <$|#> 
# * \<UNKNOWN\>:(<pwd>)> <$|#> 
#

case "${_UID}" in
0)	PS1="${_USER:+${_USER}@}${_HNAME}:(${PWD})> \$ "; ;;
*)	PS1="${_USER:+${_USER}@}${_HNAME}:(${PWD})> # "; ;;
esac;

